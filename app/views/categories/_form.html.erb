<%= link_to '< List of categories', categories_path %>

<div class="inner-form">
  <%= form_for @category do |f| %>
  <fieldset>
    <legend>Category information</legend>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control", :placeholder => "Category title" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, size: '60x6', :class => "form-control", :placeholder => "Category description" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save Category", :class => "btn btn-success"  %>
    </div>
  </fieldset>
  <% end %>
</div>
