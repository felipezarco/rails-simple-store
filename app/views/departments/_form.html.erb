<%= link_to '< List of departments', categories_path %>

<div class="inner-form">
  <%= form_for @department do |f| %>
  <fieldset>
    <legend>Department information</legend>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control", :placeholder => "Department title" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, size: '60x6',
                      :class => "form-control",
                      :placeholder => "Department description" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save Department", :class => "btn btn-success" %>
    </div>
  <% end %>
  </fieldset>
</div>
