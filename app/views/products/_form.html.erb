<%= link_to '< List of products', categories_path %>

<div class="inner-form">
  <%= form_for @product do |f| %>
    <fieldset>
      <legend>Product information</legend>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, :class => "form-control", :placeholder => "Product title" %>
      </div>
      <div class="form-group">
        <%= f.label :image_url %>
        <%= f.text_field :image_url, :class => "form-control", :placeholder => "Product image" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, size: '60x6', :class => "form-control", :placeholder => "Product description" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, :class => "form-control", :placeholder => "Product price" %>
      </div>
      <div class="form-group">
        <%= f.label :category %>
        <%=f.select :category_ids, options_for_select(Category.all.collect {|c| [c.title, c.id] }, @product.category_ids ), {}, :multiple => true, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save Product", :class => "btn btn-success" %>
      </div>
    </fieldset>
  <% end %>
</div>
