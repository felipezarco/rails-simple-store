<%= link_to '< List of users ', users_path %>

<div class="inner-form">
<%= form_for @user do |f| %>
  <fieldset>
    <legend>Account information</legend>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control", :placeholder => "Account name" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, size: 40, :class => "form-control", :placeholder => "Choose your password" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirm:' %>
      <%= f.password_field :password_confirmation, size: 40, :class => "form-control", :placeholder => "Repeat your password" %>
    </div>
    <div class="form-group">
      <%= f.label :operator %>
      <%= f.collection_select :operator_id, Operator.all, :id, :name, { :include_blank => "Select Operator User" }, { :class => "form-control" }  %>
    </div>
    <div class="form-group">
      <%= f.submit "Save User Account", :class => "btn btn-success" %>
    </div>
  </fieldset>
<% end %>
</div>
